{
  "manifest_version": 3,
  "name": "AI Job Agent",
  "version": "1.0",
  "description": "An AI agent that helps with job applications",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  }
}